<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="ConditionTypeValueHelpDialog"
        title="Select Condition Type"
        items="{
            path: '/ZI_CONDITIONTYPETEXT'
        }"
        confirm="onConditionTypeValueHelpConfirm"
        search="onConditionTypeValueHelpSearch"
    >
        <StandardListItem id="_IDGenStandardListItem"
            title="{ConditionType}"
            description="{Name}"
        />
    </SelectDialog>
</core:FragmentDefinition>